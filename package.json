{
  "name": "portkeeper",
  "version": "1.2.3",
  "description": "A comprehensive port management tool for developers with CLI and GUI interfaces",
  "main": "dist/cli/index.js",
  "type": "module",
  "bin": {
    "portman": "./dist/cli/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "scripts/postinstall.cjs",
    "scripts/ensure-electron.cjs"
  ],
  "scripts": {
    "dev": "npm run dev:cli",
    "dev:cli": "tsx watch src/cli/index.ts",
    "dev:gui": "npm run dev:electron",
    "dev:electron": "electron-vite dev",
    "start": "electron .",
    "build": "npm run build:cli && npm run build:gui",
    "build:npm": "npm run build:cli && npm run build:gui",
    "prepublishOnly": "npm run build:npm",
    "postinstall": "node scripts/postinstall.cjs",
    "fix:electron": "npm rebuild better-sqlite3 --runtime=electron --target=28.0.0 --dist-url=https://electronjs.org/headers --abi=119",
    "fix:node": "npm rebuild better-sqlite3",
    "build:cli": "tsc -p tsconfig.cli.json",
    "build:gui": "electron-vite build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:all": "npm run build && electron-builder -mwl"
  },
  "keywords": [
    "port",
    "port-management",
    "port-manager",
    "developer-tools",
    "cli",
    "gui",
    "productivity",
    "development",
    "localhost",
    "port-reservation",
    "port-scanner",
    "devops"
  ],
  "author": "Ahmad Zein",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahmadzein/portkeeper.git"
  },
  "bugs": {
    "url": "https://github.com/ahmadzein/portkeeper/issues"
  },
  "homepage": "https://portkeeper.net",
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "antd": "^5.12.8",
    "better-sqlite3": "^9.2.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "electron-updater": "^6.1.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.7"
  },
  "optionalDependencies": {
    "electron": "^28.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/utils": "^2.0.1",
    "@types/better-sqlite3": "^7.6.8",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}