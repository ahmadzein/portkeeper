{
  "name": "portmanager",
  "version": "1.0.0",
  "description": "A comprehensive port management tool for developers",
  "main": "dist/cli/index.js",
  "type": "module",
  "bin": {
    "portman": "./dist/cli/index.js"
  },
  "scripts": {
    "dev": "npm run dev:cli",
    "dev:cli": "tsx watch src/cli/index.ts",
    "dev:gui": "npm run dev:electron",
    "dev:electron": "electron-vite dev",
    "build": "npm run build:cli && npm run build:gui",
    "build:cli": "tsc -p tsconfig.cli.json",
    "build:gui": "electron-vite build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:all": "npm run build && electron-builder -mwl"
  },
  "keywords": [
    "port",
    "management",
    "developer-tools",
    "cli",
    "gui",
    "productivity"
  ],
  "author": "Ahmad Zein",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahmadzein/portmanager.git"
  },
  "bugs": {
    "url": "https://github.com/ahmadzein/portmanager/issues"
  },
  "homepage": "https://github.com/ahmadzein/portmanager#readme",
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "antd": "^5.12.8",
    "better-sqlite3": "^9.2.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "electron-updater": "^6.1.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@electron-toolkit/utils": "^2.0.1",
    "@types/better-sqlite3": "^7.6.8",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}